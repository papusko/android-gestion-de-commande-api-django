<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


    <TextView
        android:id="@+id/lunette_item_nom"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"

        android:layout_toRightOf="@id/lunette_item_image"
        android:layout_marginLeft="8dp"
        />


        <TextView
            android:id="@+id/lunette_item_description"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/lunette_item_nom"
            android:layout_toRightOf="@id/lunette_item_image"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/lunette_item_fleche"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/lunette_item_description"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/lunette_item_prix"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/lunette_item_description"
            android:layout_toRightOf="@id/lunette_item_image"
            android:layout_marginLeft="8dp"

            />


        <ImageView
        android:id="@+id/lunette_item_image"
        android:layout_width="120dp"
       android:layout_height="90dp"
        android:layout_weight="1"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>