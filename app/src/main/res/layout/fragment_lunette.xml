<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/details"
    android:background="@mipmap/back"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LunetteFragment">



            <ImageView
                android:id="@+id/lunette_item_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        android:id="@+id/lunette_item_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_below="@id/lunette_item_image"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Disponible">
                    <Button
                        android:id="@+id/disponible"
                        android:layout_height="50dp"
                        android:layout_width="150dp"
                        android:text="Disponible"
                        android:background="@drawable/shapeemail"/>
                    <Button
                        android:id="@+id/livraison"
                        android:layout_height="50dp"
                        android:layout_width="150dp"
                        android:background="@drawable/shapeemail"
                        android:layout_toRightOf="@id/disponible"
                        android:text="Livraison"/>
                    <Button
                        android:id="@+id/etat"
                        android:layout_height="50dp"
                        android:layout_width="150dp"
                        android:background="@drawable/shapeemail"
                        android:layout_toRightOf="@id/livraison"
                        android:text="Neuf"/>

</RelativeLayout>
</android.support.v7.widget.CardView>








            <TextView
                android:id="@+id/lunette_item_nom"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@id/lunette_item_buton"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                />




            <TextView
                android:id="@+id/lunette_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_below="@id/lunette_item_nom"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                />




            <TextView
                android:id="@+id/lunette_item_prix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_below="@id/lunette_item_description"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="45dp"

                />



    <Button
        android:id="@+id/vendre"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:text="AJOUTER A VOTRE"
        android:layout_margin="50dp"
        android:icon="@drawable/ic_panier"
        android:shadowColor="@color/cardview_shadow_end_color"
        android:layout_below="@+id/lunette_item_prix"
        android:background="@drawable/shapeemail"/>


</RelativeLayout>