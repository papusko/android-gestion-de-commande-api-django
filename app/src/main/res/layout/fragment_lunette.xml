<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details"
    android:orientation="vertical"
    android:transitionName="details du produir"
    android:layout_height="match_parent"
    tools:context=".LunetteFragment">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



    <ImageView
                android:id="@+id/lunette_item_image"
                android:layout_width="410dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        android:id="@+id/lunette_item_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/lunette_item_image"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Disponible">
                    <Button
                        android:id="@+id/disponible"
                        android:layout_height="50dp"
                        android:layout_width="150dp"
                        android:text="Disponible"
                        android:shadowColor="@color/cardview_dark_background"
                        android:background="@drawable/shapeemail"/>
                    <Button
                        android:id="@+id/livraison"
                        android:layout_height="50dp"
                        android:layout_width="150dp"
                        android:background="@drawable/shapeemail"
                        android:layout_toRightOf="@id/disponible"
                        android:text="Livraison"/>
                    <Button
                        android:id="@+id/etat"
                        android:layout_height="50dp"
                        android:layout_width="150dp"
                        android:background="@drawable/shapeemail"
                        android:layout_toRightOf="@id/livraison"
                        android:text="Neuf"/>

</RelativeLayout>
</android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/lunette_types"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nom du produit: "
        android:textColor="#000000"
        android:layout_below="@id/lunette_item_buton"
        android:layout_marginTop="25dp"
        />


    <TextView
        android:id="@+id/lunette_description"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Description du produit: "
        android:textColor="#000000"
        android:layout_below="@id/lunette_types"
        android:layout_marginTop="25dp"
        />

     <TextView
                android:id="@+id/lunette_prix"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Prix du produit: "
                android:textColor="#000000"
                android:layout_below="@id/lunette_description"
                android:layout_marginTop="70dp"
                />



            <TextView
                android:id="@+id/lunette_item_nom"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"

                android:layout_below="@id/lunette_item_buton"
                android:layout_toRightOf="@id/lunette_types"
                android:layout_marginTop="25dp"
                />




            <TextView
                android:id="@+id/lunette_item_description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@id/lunette_types"
                android:layout_below="@id/lunette_item_nom"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                />




            <TextView
                android:id="@+id/lunette_item_prix"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toRightOf="@id/lunette_prix"
                android:layout_below="@id/lunette_item_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                />



    <Button
        android:id="@+id/ajouter"
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:text="AJOUTER A VOTRE PANIER"
        android:textColor="#FFFFFF"
        android:layout_margin="50dp"
        android:drawablePadding="3dp"
        android:drawableLeft="@drawable/ic_panier"
        android:shadowColor="@color/cardview_shadow_end_color"
        android:layout_below="@+id/lunette_item_prix"
        android:background="@drawable/shapesignup"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>